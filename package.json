{
  "name": "prosemirror-drop-indicator",
  "type": "module",
  "version": "0.1.1",
  "packageManager": "pnpm@10.20.0",
  "description": "A ProseMirror plugin for drop indicator",
  "author": "ocavue <ocavue@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/ocavue",
  "homepage": "https://github.com/ocavue/prosemirror-drop-indicator#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocavue/prosemirror-drop-indicator.git"
  },
  "bugs": "https://github.com/ocavue/prosemirror-drop-indicator/issues",
  "keywords": [],
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "fix": "eslint --fix . && prettier --write .",
    "test": "vitest",
    "test:install": "playwright install chromium",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@ocavue/utils": "^0.8.1",
    "prosemirror-model": "^1.25.4",
    "prosemirror-state": "^1.4.4",
    "prosemirror-view": "^1.41.3"
  },
  "devDependencies": {
    "@ocavue/eslint-config": "^3.6.1",
    "@ocavue/tsconfig": "^0.5.0",
    "@types/node": "^20.19.10",
    "@vitest/browser-playwright": "^4.0.4",
    "eslint": "^9.38.0",
    "jsdom": "^27.0.1",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.11",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.4"
  }
}
